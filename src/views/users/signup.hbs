                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}" required>
                    </div>
                     <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Nombre@email.com" value="{{email}}" required >
                    </div>
                     <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                     <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar ContraseÃ±a" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>